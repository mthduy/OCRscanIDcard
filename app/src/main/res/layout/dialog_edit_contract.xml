<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:padding="12dp" android:orientation="vertical">

        <EditText android:id="@+id/etSoHopDong" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Số hợp đồng"/>
        <EditText android:id="@+id/etNgayKy" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Ngày ký"/>
        <EditText android:id="@+id/etBenA" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Bên A"/>

        <View android:layout_marginTop="8dp" android:layout_width="match_parent" android:layout_height="1dp" android:background="#E0E0E0"/>

        <EditText android:id="@+id/etHoTen" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Họ tên"/>
        <EditText android:id="@+id/etNgaySinh" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Ngày sinh"/>
        <EditText android:id="@+id/etGioiTinh" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Giới tính"/>
        <EditText android:id="@+id/etCCCD" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="CCCD"/>
        <EditText android:id="@+id/etQueQuan" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Quê quán"/>
        <EditText android:id="@+id/etNoiThuongTru" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Nơi thường trú"/>
        <EditText android:id="@+id/etNgayHetHan" android:layout_width="match_parent" android:layout_height="wrap_content" android:hint="Ngày hết hạn"/>
    </LinearLayout>
</ScrollView>
